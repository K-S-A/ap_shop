.panel.panel-primary
  .panel-heading
    %h1
      %span.label.label-danger {{roll.code + ' ' + (roll.suffix || "_") | uppercase}}
    .label.label-primary Total: {{roll.total}} m
    .label.label-success Sold: {{roll.sold}} m
    .label.label-warning Left: {{roll.left}} m
    .label.label-info Location: "{{roll.location}}"
    .label.label-default Arrival date: {{roll.arrival_date}}
  .panel-body
    .row
      %b.col-md-12.text-danger Comment: "{{roll.comment}}"
    .row
      %b.col-md-12 Receipt Date >> Receipt Amount
      %b.col-md-2.col-md-offset-5{data: {ng_show: "!roll.receipts.length"}} No receipts yet.
    .row{data: {ng_repeat: "receipt in roll.receipts | orderBy : 'receipt_date'"}}
      .col-md-12 {{receipt.receipt_date}} >> {{receipt.receipt_amount | number : 2}} m
