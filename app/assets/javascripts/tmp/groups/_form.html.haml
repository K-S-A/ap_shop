/ Notice
.alert.alert-success.fade.in{data: {ng_show: "message", ng_click: "message = false"}}
  %strong {{message}}
.panel.panel-info
  .panel-heading Add Group
  .panel-body
    %form{name: "groupForm", role: "form", novalidate: true, data: {ng_submit: "addGroup()"}}
      %fieldset{data: {ng_disabled: "message"}}
        .row
          / Title
          .form-group.col-md-12
            %label{for: "name"} Name:
            %input.form-control{name: "name", type: "text", required: true, data: {ng_model: "group.name"}}/
            %p.text-danger{data: {ng_show: "groupForm.name.$invalid && groupForm.name.$dirty"}} Name is required.
          / Buttons
          .btn-group.btn-group-justified.col-md-12
            .btn-group
              %button.btn.btn-info{type: "button", data: {ng_click: "resetForm()"}} Reset
            .btn-group
              %button.btn.btn-info{type: "button", data: {ui_sref: "groups"}} Close
          .btn-group.btn-group-justified.col-md-12
            .btn-group
              %button.btn.btn-danger{type: "submit", data: {ng_disabled: "groupForm.$invalid"}} Create Group

{{group}}
