.panel-heading{data: {ng_mouseenter: "roll.show_delete = true", ng_mouseleave: "roll.show_delete = false"}}
  %span.btn.btn-xs.btn-success.glyphicon.glyphicon-ok
  %label.label-warning{data: {ng_if: "!textile.code"}} {{roll.code}}
  .badge {{roll.suffix || "_" | uppercase}}
  .label.label-success Remain: {{roll.left | number : 2}} m
  .badge Total: {{roll.total | number : 2}} m
  .label.label-info Location: {{roll.location || "undefined"}}
  .label.label-warning Arrival: {{roll.arrival_date}}
  %span{data: {ng_if: "roll.comment"}} Comment: "{{roll.comment}}"
  %span{data: {ng_if: "roll.info"}} Info: "{{roll.info}}"
  %span.btn.btn-xs.btn-danger.glyphicon.glyphicon-remove{data: {ng_click: "deleteRoll(roll.id, textile)", ng_if: "roll.show_delete"}}
